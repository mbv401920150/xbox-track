<MudDialog>
    <DialogContent>
        @if (ItemsInPack is not null)
        {
            @foreach (var item in ItemsInPack)
            {
                <div>
                    <MudIcon Size="Size.Small" Icon="@Icons.Material.Filled.ChevronRight"/>
                    <MudText Typo="Typo.caption">@item </MudText>
                </div>
            }
        }
    </DialogContent>
    
    <DialogActions>
        <MudButton OnClick="@Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="@Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter] 
    public IEnumerable<string>? ItemsInPack { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}